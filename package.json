{
  "name": "wealth",
  "version": "1.1.7",
  "repository": "https://github.com/amirmohsen/wealth",
  "description": "A full-featured money library",
  "scripts": {
    "build": "ts-node --project ./build/tsconfig.json build",
    "dev": "ts-node --project ./build/tsconfig.json build --dev",
    "lint": "yarn rm:lib && jest --config ./lint.config.js",
    "test:unit": "yarn rm:lib && jest --config ./unit-test.config.js",
    "test:functional": "yarn rm:lib && jest --config ./functional-test.config.js",
    "test": "yarn lint && yarn test:unit && yarn test:functional",
    "updateRootPackageJSONVersion": "ts-node --project ./build/tsconfig.json build/updateRootPackageJSONVersion",
    "rm:lib": "rm -rf ./lib"
  },
  "keywords": [
    "flexverse",
    "money",
    "currency",
    "calculation",
    "formatting",
    "allocation",
    "serializable"
  ],
  "author": {
    "name": "Amir Abdolrazaghi",
    "email": "amir@flexverse.tech"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirmohsen/wealth/issues"
  },
  "homepage": "https://github.com/amirmohsen/wealth#readme",
  "jest-stare": {
    "resultDir": "testOutput/unit/report",
    "coverageLink": "../coverage/lcov-report/index.html"
  },
  "dependencies": {
    "bignumber.js": "^9",
    "common-tags": "^1",
    "deep-freeze": "^0.0.1",
    "es6-error": "^4",
    "lodash.isequal": "^4",
    "validator": "^11"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3",
    "@semantic-release/git": "^7",
    "@types/common-tags": "^1",
    "@types/deep-freeze": "^0.1",
    "@types/fs-extra": "^8",
    "@types/jest": "^24",
    "@types/lodash.isequal": "^4",
    "@types/validator": "^10",
    "@types/yargs": "^13",
    "cli-spinners": "^2",
    "fs-extra": "^8",
    "jest": "^24",
    "jest-runner-tslint": "^1",
    "jest-stare": "^1",
    "jest-watch-directories": "^1",
    "jest-watch-select-projects": "^0.1",
    "jest-watch-suspend": "^1",
    "jest-watch-typeahead": "^0.3",
    "ora": "^3",
    "prettier": "^1",
    "rollup": "^1",
    "rollup-plugin-commonjs": "^10",
    "rollup-plugin-json": "^4",
    "rollup-plugin-node-resolve": "^5",
    "rollup-plugin-typescript2": "^0.22.0",
    "semantic-release": "^15",
    "ts-jest": "^24",
    "ts-node": "^8",
    "tslint": "^5",
    "tslint-config-airbnb": "^5",
    "typescript": "^3",
    "yargs": "^13"
  }
}

{
  "name": "wealth",
  "version": "0.1.1",
  "repository": "https://github.com/amirmohsen/wealth",
  "description": "A full-featured money library",
  "scripts": {
    "build": "rollup -c -m",
    "dev": "rollup -c -m -w",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "docs": "esdoc"
  },
  "files": [
    "lib"
  ],
  "main": "lib/wealth.cjs.js",
  "module": "lib/wealth.esm.js",
  "browser": "lib/wealth.umd.js",
  "keywords": [
    "flexverse",
    "money",
    "currency",
    "calculation",
    "formatting",
    "allocation",
    "serializable"
  ],
  "author": {
    "name": "Amir Abdolrazaghi",
    "email": "amir@flexverse.tech"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirmohsen/wealth/issues"
  },
  "homepage": "https://github.com/amirmohsen/wealth#readme",
  "babel": {
    "presets": [
      [
        "env"
      ]
    ],
    "plugins": [
      "syntax-decorators",
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageDirectory": "testOutput/coverage",
    "testResultsProcessor": "./node_modules/jest-html-reporter"
  },
  "jest-html-reporter": {
    "pageTitle": "Wealth test suite",
    "outputPath": "testOutput/report.html",
    "includeFailureMsg": true
  },
  "dependencies": {
    "bignumber.js": "^8",
    "es6-error": "^4",
    "lodash.isequal": "^4",
    "validator": "^9"
  },
  "devDependencies": {
    "babel-jest": "^23",
    "babel-plugin-external-helpers": "^6",
    "babel-plugin-syntax-decorators": "^6",
    "babel-plugin-transform-class-properties": "^6",
    "babel-plugin-transform-decorators-legacy": "^1",
    "babel-plugin-transform-object-rest-spread": "^6",
    "babel-preset-env": "^1",
    "esdoc": "^1",
    "esdoc-ecmascript-proposal-plugin": "^1",
    "esdoc-named-import-plugin": "0.0.0",
    "esdoc-standard-plugin": "^1",
    "jest": "^23",
    "jest-html-reporter": "^2",
    "rollup": "^0.55",
    "rollup-plugin-babel": "^3",
    "rollup-plugin-commonjs": "^8",
    "rollup-plugin-json": "^2",
    "rollup-plugin-node-resolve": "^3"
  }
}

{
  "name": "wealth",
  "version": "0.2.0",
  "repository": "https://github.com/amirmohsen/wealth",
  "description": "A full-featured money library",
  "scripts": {
    "prepublishOnly": "npm run build",
    "docs": "rm -rf ./docs && typedoc --name Wealth --out docs --mode file",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rm -rf ./lib && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -cm",
    "watch": "rollup -cmw",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "files": [
    "lib"
  ],
  "main": "lib/wealth.cjs.js",
  "module": "lib/wealth.esm.js",
  "browser": "lib/wealth.umd.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "flexverse",
    "money",
    "currency",
    "calculation",
    "formatting",
    "allocation",
    "serializable"
  ],
  "author": {
    "name": "Amir Abdolrazaghi",
    "email": "amir@flexverse.tech"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirmohsen/wealth/issues"
  },
  "homepage": "https://github.com/amirmohsen/wealth#readme",
  "jest-stare": {
    "resultDir": "testOutput/report",
    "coverageLink": "../coverage/lcov-report/index.html"
  },
  "dependencies": {
    "bignumber.js": "^8",
    "common-tags": "1",
    "deep-freeze": "^0.0.1",
    "es6-error": "^4",
    "lodash.isequal": "^4",
    "validator": "^10"
  },
  "devDependencies": {
    "@types/common-tags": "^1.4.0",
    "@types/deep-freeze": "^0.1.1",
    "@types/jest": "^23",
    "@types/lodash.isequal": "^4",
    "@types/validator": "^9",
    "esdoc": "^1",
    "esdoc-ecmascript-proposal-plugin": "^1",
    "esdoc-named-import-plugin": "0.0.0",
    "esdoc-standard-plugin": "^1",
    "jest": "^23",
    "jest-runner-tslint": "^1.0.5",
    "jest-stare": "^1.8.0",
    "jest-watch-directories": "^1.1.0",
    "jest-watch-select-projects": "^0.1.1",
    "jest-watch-suspend": "^1.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "prettier": "^1",
    "rollup": "^0.66",
    "rollup-plugin-babel": "^4",
    "rollup-plugin-commonjs": "^9",
    "rollup-plugin-json": "^3",
    "rollup-plugin-node-resolve": "^3",
    "rollup-plugin-typescript2": "^0.17",
    "ts-jest": "^23",
    "tslint": "^5",
    "tslint-config-airbnb": "^5",
    "typedoc": "^0.13.0",
    "typescript": "^3"
  }
}

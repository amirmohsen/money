{
  "name": "wealth",
  "version": "0.1.1",
  "repository": "https://github.com/amirmohsen/wealth",
  "description": "A full-featured money library",
  "scripts": {
    "prepublishOnly": "npm run build",
    "docs": "esdoc",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c -m",
    "watch": "rollup -c -m -w",
    "lint": "tslint",
    "test": "jest"
  },
  "files": [
    "lib"
  ],
  "main": "lib/wealth.cjs.js",
  "module": "lib/wealth.esm.js",
  "browser": "lib/wealth.umd.js",
  "keywords": [
    "flexverse",
    "money",
    "currency",
    "calculation",
    "formatting",
    "allocation",
    "serializable"
  ],
  "author": {
    "name": "Amir Abdolrazaghi",
    "email": "amir@flexverse.tech"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirmohsen/wealth/issues"
  },
  "homepage": "https://github.com/amirmohsen/wealth#readme",
  "babel": {
    "presets": [
      [
        "@babel/env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "exclude": [
      "node_modules/**"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageDirectory": "testOutput/coverage",
    "testResultsProcessor": "./node_modules/jest-html-reporter"
  },
  "jest-html-reporter": {
    "pageTitle": "Wealth test suite",
    "outputPath": "testOutput/report.html",
    "includeFailureMsg": true
  },
  "dependencies": {
    "bignumber.js": "^8",
    "es6-error": "^4",
    "lodash.isequal": "^4",
    "validator": "^10"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/plugin-proposal-class-properties": "^7",
    "@babel/preset-env": "^7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23",
    "esdoc": "^1",
    "esdoc-ecmascript-proposal-plugin": "^1",
    "esdoc-named-import-plugin": "0.0.0",
    "esdoc-standard-plugin": "^1",
    "jest": "^23",
    "jest-html-reporter": "^2",
    "rollup": "^0.66",
    "rollup-plugin-babel": "^4",
    "rollup-plugin-commonjs": "^9",
    "rollup-plugin-json": "^3",
    "rollup-plugin-node-resolve": "^3",
    "rollup-plugin-typescript": "^1",
    "tslib": "^1",
    "tslint": "^5",
    "tslint-config-airbnb": "^5",
    "typescript": "^3"
  }
}

{
  "name": "wealth",
  "version": "1.0.0",
  "repository": "https://github.com/amirmohsen/wealth",
  "description": "A full-featured money library",
  "scripts": {
    "prepublishOnly": "npm run build",
    "docs": "rm -rf ./docs && typedoc --name Wealth --out docs --mode file",
    "build": "ts-node --project ./build/tsconfig.json build",
    "dev": "ts-node --project ./build/tsconfig.json build --dev",
    "lint": "rm -rf ./lib && jest --config ./lint.config.js",
    "test:unit": "rm -rf ./lib && jest --config ./unit-test.config.js",
    "test:functional": "rm -rf ./lib && jest --config ./functional-test.config.js",
    "test": "npm run lint && npm run test:unit && npm run test:functional"
  },
  "keywords": [
    "flexverse",
    "money",
    "currency",
    "calculation",
    "formatting",
    "allocation",
    "serializable"
  ],
  "author": {
    "name": "Amir Abdolrazaghi",
    "email": "amir@flexverse.tech"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirmohsen/wealth/issues"
  },
  "homepage": "https://github.com/amirmohsen/wealth#readme",
  "jest-stare": {
    "resultDir": "testOutput/unit/report",
    "coverageLink": "../coverage/lcov-report/index.html"
  },
  "dependencies": {
    "bignumber.js": "^8",
    "common-tags": "1",
    "deep-freeze": "^0.0.1",
    "es6-error": "^4",
    "lodash.isequal": "^4",
    "validator": "^10"
  },
  "devDependencies": {
    "@types/common-tags": "^1",
    "@types/deep-freeze": "^0.1",
    "@types/jest": "^23",
    "@types/lodash.isequal": "^4",
    "@types/ora": "^1",
    "@types/validator": "^9",
    "@types/yargs": "^12",
    "cli-spinners": "^1",
    "fs-extra": "^7",
    "jest": "^23",
    "jest-runner-tslint": "^1",
    "jest-stare": "^1",
    "jest-watch-directories": "^1",
    "jest-watch-select-projects": "^0.1",
    "jest-watch-suspend": "^1.1",
    "jest-watch-typeahead": "^0.2",
    "ora": "^3",
    "prettier": "^1",
    "rollup": "^0.66",
    "rollup-plugin-commonjs": "^9",
    "rollup-plugin-json": "^3",
    "rollup-plugin-node-resolve": "^3",
    "rollup-plugin-typescript2": "^0.17",
    "ts-jest": "^23",
    "ts-node": "^7",
    "tslint": "^5",
    "tslint-config-airbnb": "^5",
    "typedoc": "^0.13",
    "typescript": "^3",
    "yargs": "^12"
  }
}
